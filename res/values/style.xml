<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3561AD</item>
        <item name="colorPrimaryDark">#3561AD</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>

    <style name="FullHeightDialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="App_EditTextStyle">
        <item name="android:background">@drawable/etbg</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="App_TextViewStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="App_ButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>